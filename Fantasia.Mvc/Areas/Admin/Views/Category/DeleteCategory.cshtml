@model Fantasia.DataAccess.Entity.Category

@{
    ViewData["Title"] = "Delete Category";
}



<h3 class="mt-5 mx-5">هل انت متاكد من الحذف ؟</h3>

<hr />
<div class="row mx-5 mt-5 mb-5">
    <div class="col-md-6 mt-3">
        <img src="~/images/@Model.ImageUrl" width="100%" height="100%" class="img-thumbnail" />
    </div>
    <div class="col-md-6">
        <form asp-action="DeleteCategory" enctype="multipart/form-data">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <input type="hidden" asp-for="Id" />
            <div class="form-group mt-3">
                <label class="control-label">الاسم</label>
                <input readonly asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <input type="submit" value="حذف" class="btn btn-danger" />
                <a class="btn btn-secondary" asp-action="GetCategories">الاقسام</a>
            </div>
        </form>
    </div>

</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}