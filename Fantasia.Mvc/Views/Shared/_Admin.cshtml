<!DOCTYPE html>
<html lang="en">

<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"]</title>

    <link rel="stylesheet" href="~/css/style.css">

    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-QWTKZyjpPEjISv5WaRU9OFeRpok6YctnYmDr5pNlyT2bRjXh0JMhjY6hW+ALEwIH" crossorigin="anonymous">

    <link href="https://cdn.lineicons.com/4.0/lineicons.css" rel="stylesheet" />

    <link rel="stylesheet" href="~/Fantasia.Mvc.styles.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/styleHover.css">
</head>

<body>

    <div class="wrapper">
        <aside id="sidebar">
            <div class="d-flex">
                <button class="toggle-btn" type="button">
                    <i class="lni lni-grid-alt"></i>
                </button>
                <div class="sidebar-logo">
                    <a asp-controller="Home" asp-action="Index">FANTSIA</a>
                </div>
            </div>
            <ul class="sidebar-nav">
                <li class="sidebar-item">
                    <a asp-controller="Category" asp-action="GetCategories" class="sidebar-link">
                        <i class="lni lni-cog"></i>
                        <span>الاقسام</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Product" asp-action="GetProducts" class="sidebar-link">
                        <i class="lni lni-user"></i>
                        <span>المنتجات</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Color" asp-action="GetColours" class="sidebar-link">
                        <i class="lni lni-agenda"></i>
                        <span>الالوان</span>
                    </a>
                </li>
                <li class="sidebar-item">
                    <a asp-controller="Size" asp-action="GetSizes" class="sidebar-link">
                        <i class="lni lni-popup"></i>
                        <span>القياسات</span>
                    </a>
                </li>

            </ul>
            <div class="sidebar-footer">
                <a asp-controller="Account" asp-action="Logout" class="sidebar-link">
                    <i class="lni lni-exit"></i>
                    <span>Logout</span>
                </a>
            </div>
        </aside>
        <div class="main p-3">
            @RenderBody()
        </div>
    </div>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.3/dist/js/bootstrap.bundle.min.js"
        integrity="sha384-YvpcrYf0tY3lHB60NNkmXc5s9fDVZLESaAA55NDzOxhy9GkcIdslK1eN7N6jIeHz"
        crossorigin="anonymous"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    <script src="~/js/toggle.js"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>

</html>
