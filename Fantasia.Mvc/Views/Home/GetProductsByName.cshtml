@model List<Product>

@{
    ViewData["Title"] = "Search";
}

<div class="d-inline-block ">
    @foreach (var item in Model)
    {
        <div class="card mt-3 mb-3 mx-3 d-inline-block " style="width: 12rem; height: 18rem;">
            <a asp-controller="Product" asp-action="GetProductByName" asp-route-id="@item.Id">
                <img src="~/images/@item.ImageUrl" alt="" class="d-block user-select-none" width="100%" height="70%"
                    aria-label="Placeholder: Image cap" focusable="false" role="img" preserveAspectRatio="xMidYMid slice"
                    viewBox="0 0 318 180" style="font-size:1.125rem;text-anchor:middle">
            </a>

            <div class="card-body row">
                <p>@item.Name</p>
            </div>
        </div>
    }
</div>