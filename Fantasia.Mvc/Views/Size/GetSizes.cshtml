@model List<Size>

@{
    ViewData["Title"] = "Colores";
}
<div class="mt-3 mx-3">
    <a class="btn btn-primary " asp-controller="Size" asp-action="CreateSize">Create
        Size</a>
</div>
<table class="table table-hover">
    <thead>
        <tr>

            <th scope="col">Name</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>@item.Name</tr>
            <tr>
                <a class="btn btn-info mx-3 col-md-4" asp-action="EditSize" asp-route-id="@item.Id">Edit</a>

                <a class="btn btn-warning mx-2 col-md-4" asp-action="DeleteSize" asp-route-id="@item.Id">Delete</a>

            </tr>
        }
    </tbody>
</table>