@model List<Category>

@{
    ViewData["Title"] = "Categories";
}
<div class="mt-3 mx-3">
    <a class="btn btn-primary " asp-controller="Category" asp-action="CreateCategory">أضافة قسم جديد</a>
</div>
<table class="table table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">الاسم</th>
            <th scope="col">صورة</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Name</td>
                <td>@item.ImageUrl</td>
                <td>
                    <a class="btn btn-warning mx-3 col-md-3" asp-action="EditCategory" asp-route-id="@item.Id">تعديل</a>

                    <a class="btn btn-danger mx-3 col-md-3" asp-action="DeleteCategory" asp-route-id="@item.Id">حذف</a>

                </td>
            </tr>

        }
    </tbody>
</table>