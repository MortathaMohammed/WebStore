@model List<Category>

@{
    ViewData["Title"] = "Categories";
}


<div class="row  mt-3">

    <div class="col-md-4">
        <div>
            <div class="input-group row mt-4  ">
                <form class="d-flex" asp-controller="Category" asp-action="GetCategories">
                    <input name=" search" type="search" class="form-control me-l" placeholder="البحث عن منتج"
                        aria-label="Search">

                    <button class="btn btn-outline-secondary" type="submit">
                        <svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor"
                            class="bi bi-search" viewBox="0 0 16 16">
                            <path
                                d="M11.742 10.344a6.5 6.5 0 1 0-1.397 1.398h-.001q.044.06.098.115l3.85 3.85a1 1 0 0 0 1.415-1.414l-3.85-3.85a1 1 0 0 0-.115-.1zM12 6.5a5.5 5.5 0 1 1-11 0 5.5 5.5 0 0 1 11 0" />
                        </svg>
                    </button>

                </form>
            </div>
        </div>
    </div>
    @* <div class="mt-3 mx-3">
    <a class="btn btn-primary " asp-controller="Category" asp-action="CreateCategory">أضافة قسم جديد</a>
    </div> *@
    <div class="row mx-3 my-5">
        <hr style="color: black; font-weight: 100;">
        <table class="table table-hover">
            <thead>
                <tr>
                    <th scope="col">الاسم</th>
                    <th scope="col">صورة</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @foreach (var item in Model)
                {
                    <tr>
                        <td>@item.Name</td>
                        <td>@item.ImageUrl</td>
                        <td>
                            <a class="btn btn-warning mx-3 col-md-2 " asp-action="EditCategory"
                                asp-route-id="@item.Id">تعديل</a>

                            <a class="btn btn-danger mx-3 col-md-2" asp-action="DeleteCategory"
                                asp-route-id="@item.Id">حذف</a>

                        </td>
                    </tr>

                }
            </tbody>
        </table>
    </div>
</div>
@section Scripts {
    @{
        await Html.RenderPartialAsync("_ValidationScriptsPartial");
    }
}