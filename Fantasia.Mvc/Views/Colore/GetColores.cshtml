@model List<Colore>

@{
    ViewData["Title"] = "Colores";
}
<div class="mt-3 mx-3">
    <a class="btn btn-primary " asp-controller="Colore" asp-action="CreateColore">أضافة لون</a>
</div>
<table class="table table-hover mt-5">
    <thead>
        <tr>
            <th scope="col">ألاسم</th>
            <th scope="col">اللون</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.Code</td>
                <td>@item.Name</td>
                <td>
                    <a class="btn btn-warning mx-3 col-md-3" asp-action="EditColore" asp-route-id="@item.Id">تعديل</a>

                    <a class="btn btn-danger mx-3 col-md-3" asp-action="DeleteColore" asp-route-id="@item.Id">حذف</a>

                </td>
            </tr>

        }
    </tbody>
</table>